{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "codebase": "default",
      "source": "functions",
      "predeploy": [],
      "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log", "*.local"]
    }
  ],
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      "firestore.rules",
      "firestore.indexes.json",
      "storage.rules",
      "**/node_modules/**",
      "**/.*",
      "functions/**",
      "*.md",
      "package.json",
      "package-lock.json",
      "BACKEND_SETUP.md",
      "FIREBASE_SETUP.md",
      "README.md",
      ".github/**"
    ]
  }
}
